%{
import parse
import swifty_flavors as swift

models = parse.parseModels("sample.yml")

def descriptionComment(text):
    if text == "":
        return ""
    else:
        return "// " + text

}%
// 
// Model definitions generated by Swako
//

% for model in models:
// ${model.name}
public struct ${model.name} {
% for property in model.properties:
  public var ${property.name}: ${swift.typeNameFromProperty(property)} ${descriptionComment(property.description)}
% end
}

% end